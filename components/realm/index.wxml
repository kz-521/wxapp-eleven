<wxs src="../../wxs/price.wxs" module="p"></wxs>

<scroll-view class="container" scroll-y>
    <view class="inner-container">
        <view class="sku-preview">
            <image src="{{previewImg}}" class="sku-img"></image>
            <view class="sku-description">
                <text class="title">{{title}}</text>
                <view>
                    <view class="price-row">
                        <l-price
                                value="{{p.mainPrice(price,discountPrice).price}}"
                                color="#157658"
                                value-size="28"
                                autofix></l-price>

                        <l-price wx:if="{{p.slashedPrice(price,discountPrice).display}}"
                                 deleted
                                 color="#999999"
                                 value-size="26"
                                 l-class="discount-price"
                                 value="{{p.slashedPrice(price,discountPrice).price}}">
                        </l-price>

                        <view wx:if="{{stock && stock >= 10}}" class="stock">库存：{{stock}} 件</view>
                        <view wx:if="{{stock && stock < 10 && stock !=0 }}" class="stock-pinch">仅剩：{{stock}} 件</view>

                    </view>

                    <view wx:if="{{!noSpec}}" class="sku-pending">
                        <text wx:if="{{!skuIntact}}">请选择：</text>
                        <text wx:else>已选：</text>
                        <text wx:if="{{!skuIntact}}">{{missingKeys}}</text>
                        <text wx:else>{{currentValues}}</text>
                    </view>

                </view>
            </view>
        </view>

        <view class="hr"></view>

        <!-- SKU规格选择 -->
        <block wx:for="{{fences}}" wx:key="index">
            <s-fence x="{{index}}" bind:celltap="onCellTap" fence="{{item}}"></s-fence>
        </block>

        <!-- 口味选择区域（订单选项） -->
        <view class="order-options" wx:if="{{spu.order_options && spu.order_options.length > 0}}">
            <view wx:for="{{spu.order_options}}" wx:key="id" class="option-group">
                <view class="option-group-header">
                    <text class="option-group-name">{{item.name}}</text>
                </view>
                <view class="option-values">
                    <view wx:for="{{item.values}}" wx:key="id" wx:for-item="option"
                          class="option-value {{selectedOrderOptions[item.id] === option.id ? 'selected' : ''}}"
                          bindtap="selectOrderOption"
                          data-group-id="{{item.id}}"
                          data-option-id="{{option.id}}">
                        <text class="option-text">{{option.full_text}}</text>
                        <view class="recommend-tag" wx:if="{{option.recommend}}">推荐</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="counter-container">
            <text>购买数量</text>
            <s-counter count = "{{nowCount}}" bind:lintap="onSelectCount"></s-counter>
        </view>
    </view>
</scroll-view>

