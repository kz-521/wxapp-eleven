
.container{
    box-sizing: border-box;
    /*padding:30rpx;*/
    background-color: #ffffff;
    max-height:1000rpx;
    min-height: 700rpx;
}

.inner-container{
    padding: 30rpx 30rpx 0 30rpx;
}

.sku-preview {
    display: flex;
    flex-direction: row;
}

.sku-img{
    width: 160rpx;
    height: 160rpx;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.discount-price {
    margin-left: 20rpx;
}

.price-row{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.sku-pending{
    font-size:20rpx;
}

.sku-pending > text:first-child{
    color:#999999;
}

.sku-pending > text:nth-child(2){
    color:#666666;
}

/* 订单选项样式 */
.order-options {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.option-group {
  margin-bottom: 20rpx;
}

.option-group-header {
  margin-bottom: 15rpx;
}

.option-group-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.option-values {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.option-value {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid #f0f0f0;
  position: relative;
  transition: all 0.2s ease;
}

.option-value.selected {
  background-color: #477676;
  border-color: #477676;
}

.option-text {
  font-size: 24rpx;
  color: #666666;
}

.option-value.selected .option-text {
  color: #ffffff;
}

.recommend-tag {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  background-color: #ff6b6b;
  color: #ffffff;
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

.option-value.selected .recommend-tag {
  background-color: #ffffff;
  color: #477676;
}



.hr{
    margin-top: 30rpx;
    width: 690rpx;
    height: 2rpx;
    background-color: #E9E9E9;
}

.stock {
    margin-left:30rpx;
    font-size: 20rpx;
    color: #999;
}

.stock-pinch{
    margin-left:30rpx;
    font-size: 20rpx;
    color: #D20109;
}

.counter-container {
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 100rpx;
}

.counter-container text{
    color:#555555;
    font-size:24rpx;
}

.bottom-btn{
    display:flex;
    flex-direction:row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100rpx;
    background-color: #333333;
}

.out-stock{
    background-color: #DCEBE6;
}

.bottom-btn text{
    color: #ffffff;
}

.safe-area {
    background-color: #fff;
}
