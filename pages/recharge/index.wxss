.recharge-page {
  background-color: #FFFFFF;
  min-height: 100vh;
  padding: 40rpx 50rpx;
  box-sizing: border-box;
  padding-bottom: 200rpx; /* 为底部按钮留出空间 */
}

/* 余额信息卡片 */
.balance-card {
  width: 650rpx;
  background: #F9F8FA;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  text-align: center;
  margin-bottom: 60rpx;
}

.balance-title {
  font-size: 28rpx;
  color: rgba(0,0,0,0.65);
  font-family: PingFang-SC-Medium;
  line-height: 40rpx;
  display: block;
  margin-bottom: 20rpx;
}

.balance-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.currency {
  font-size: 36rpx;
  color: #000000;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
}

.amount {
  font-size: 72rpx;
  color: #000000;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 1;
}

.balance-tip {
  font-size: 24rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Regular;
  line-height: 34rpx;
}

/* 充值金额选择区域 */
.amount-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  color: #000000;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 45rpx;
  display: block;
  margin-bottom: 40rpx;
}

.amount-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.amount-item {
  width: 315rpx;
  height: 120rpx;
  background: #F9F8FA;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-sizing: border-box;
  position: relative;
}

.amount-item.selected {
  background: #2EAA5B;
  border-color: #2EAA5B;
}

.amount-text {
  font-size: 36rpx;
  color: rgba(0,0,0,0.85);
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 50rpx;
}

.amount-item.selected .amount-text {
  color: #FFFFFF;
}

.amount-bonus {
  font-size: 22rpx;
  color: #FF6B35;
  font-family: PingFang-SC-Regular;
  line-height: 30rpx;
  margin-top: 8rpx;
}

.amount-item.selected .amount-bonus {
  color: #FFE4D6;
}

/* 充值说明 */
.recharge-tips {
  background: #F9F8FA;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #000000;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 40rpx;
  display: block;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: rgba(0,0,0,0.65);
  font-family: PingFang-SC-Regular;
  line-height: 34rpx;
}

/* 充值记录 */
.recharge-history {
  margin-bottom: 40rpx;
}

.history-title {
  font-size: 28rpx;
  color: #000000;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 40rpx;
  display: block;
  margin-bottom: 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F9F8FA;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-amount {
  font-size: 32rpx;
  color: #2EAA5B;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 45rpx;
}

.history-time {
  font-size: 24rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Regular;
  line-height: 34rpx;
}

.history-status {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 34rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.history-status.success {
  color: #2EAA5B;
  background: rgba(46, 170, 91, 0.1);
}

.history-status.pending {
  color: #FF9500;
  background: rgba(255, 149, 0, 0.1);
}

/* 充值按钮 */
.recharge-button-wrapper {
  position: fixed;
  bottom: 60rpx;
  left: 50rpx;
  right: 50rpx;
}

.recharge-button {
  width: 100%;
  height: 100rpx;
  background: #CCCCCC;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  color: #FFFFFF;
  font-family: PingFang-SC-Medium;
  font-weight: 600;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.recharge-button.active {
  background: #2EAA5B;
}

.recharge-button.active:active {
  background: #269149;
  transform: scale(0.98);
}

.recharge-button.disabled:active {
  transform: none;
}

/* 确保页面背景为白色 */
page {
  background-color: #FFFFFF;
}