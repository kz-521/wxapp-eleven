/* 页面整体样式 */
.order-page {
    background-color: #FFFFFF;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* 确保页面背景为白色 */
page {
    background-color: #FFFFFF;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
    display: none;
}

/* 顶部状态栏 */
.status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 30rpx 20rpx 30rpx;
    background-color: #FFFFFF;
}

.time {
    font-size: 32rpx;
    color: #000000;
    font-weight: 500;
}

.status-icons {
    display: flex;
    gap: 10rpx;
}

.status-icon {
    width: 24rpx;
    height: 24rpx;
}

/* 问候区域 */
.greeting-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx 30rpx 30rpx;
    background-color: #FFFFFF;
    margin-top: 40rpx;
    margin-bottom: 55rpx;
}

.greeting-content {
    display: flex;
    align-items: center;
    gap: 15rpx;
}

.leaf-icon {
    width: 43rpx;
    height: 59rpx;
}

.greeting-text {
    display: flex;
    flex-direction: column;
}

.greeting-title {
    width: 170rpx;
    height: 40rpx;
    font-family: PingFangSC, PingFang SC;
    font-weight: 500;
    font-size: 28rpx;
    color: #000000;
    line-height: 40rpx;
    text-align: left;
    font-style: normal;
    background: linear-gradient(90deg, #477676 0%, #080E0E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 8rpx;
}

.greeting-subtitle {
    font-size: 20rpx;
    color: rgba(0,0,0,0.6);
    line-height: 28rpx;
}

.slipper-icons {
    display: flex;
    gap: 10rpx;
}

.slipper-icon {
    width: 90rpx;
    height: 53rpx;
}

/* 主要内容区域 */
.main-content {
    display: flex;
    flex: 1;
    background-color: #F5F5F5;
}

/* 左侧分类栏 */
.category-sidebar {
    width: 150rpx;
    background-color: #F9F9F9;
    height: auto;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
}

.category-item {
    padding: 30rpx 20rpx;
    text-align: center;
    border-left: 4rpx solid transparent;
    transition: all 0.3s ease;
    position: relative;
    width: 150rpx;
    box-sizing: border-box;
    cursor: pointer;
}

.category-item.active {
    background-color: #FFFFFF !important;
}

.category-item.active::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 2rpx;
    height: 120rpx;
    background-color: rgba(0,0,0,0.6);
    border-radius: 4rpx;
}

.category-item:active {
    background-color: #F0F0F0;
    transform: scale(0.98);
}

.category-text {
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
    line-height: 32rpx;
    transition: color 0.3s ease;
}

.category-item.active .category-text {
    color: rgba(0,0,0,0.85) !important;
    font-weight: 500 !important;
}

/* 右侧商品列表 */
.product-section {
    height: calc(100% - 200rpx)!important;
