<l-capsule-bar  capsule-left-icon-width="30"
                bg-color = "#EC4343"
                title="取餐号"
                title-color = "#FFFFFF"
                home-page="/pages/home/home"
                capsule-left-icon-height="35"
                capsule-right-icon-width="30"
                capsule-right-icon-height="35"
                capsule-color="white"
                capsule-left-icon-path="/imgs/reback.png"
                capsule-right-icon-path="/imgs/home.png">
</l-capsule-bar>

<view class="container">
    <view class="red-back"></view>
    <view class="text-code">
       <!-- //<text class="text-one">取餐号</text>-->
        <text class="text-two">{{orderItems.take_food_num}}</text>
        <text class="text-san">订单已经下单成功，请客官耐心等待！</text>

    </view>
    <view class="order-item-container">

        <view class="order-nav">
            <text class="first-text">老潼关肉夹馍</text>
            <text class="second-text">支付成功</text>
        </view>

        <block wx:for="{{orderItems.snap_items}}" wx:key="{{item.sku.id}}">
            <s-order-sku-item l-class="order-item" order-item="{{item}}"></s-order-sku-item>
        </block>
    </view>

    <view class="order-detail">
        <view class="order-detail-header">
            <text>订单信息</text>
        </view>
        <view>
            <text class="detail-title">订单号</text>
            <text>{{orderItems.order_no}}</text>
        </view>
        <view>
            <text class="detail-title">下单时间</text>
            <text>{{orderItems.create_time}}</text>
        </view>
        <view>
            <text class="detail-title">支付方式</text>
            <text>微信支付</text>
        </view>
        <view>
            <text class="detail-title">用餐方式</text>
            <text>{{orderItems.dining_way==1?'店内就餐':'打包带走'}}</text>
        </view>
        <view>
            <text class="detail-title">备注</text>
            <text class="detail-remark">{{orderItems.remark}}</text>
        </view>
    </view>
</view>
