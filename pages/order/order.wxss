    padding-left: 30rpx;
    padding-right: 50rpx;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0px 0px 4px 0px rgba(210, 210, 210, 0.5);
}

.price-container {
    /*height: 60rpx;*/
