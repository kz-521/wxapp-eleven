<view class="page">
  <view class="group_1">
    <view class="text-wrapper_1">
      <view class="tab-item">
        <text lines="1" class="text_3 {{activeTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-tab="1">全部</text>
        <image wx:if="{{activeTab === 1}}" src="/imgs/item-bottom.png" class="tab-underline"></image>
      </view>
      <view class="tab-item">
        <text lines="1" class="text_4 {{activeTab === 2 ? 'active' : ''}}" bindtap="switchTab" data-tab="2">待取茶</text>
        <image wx:if="{{activeTab === 2}}" src="/imgs/item-bottom.png" class="tab-underline"></image>
      </view>
      <view class="tab-item">
        <text lines="1" class="text_5 {{activeTab === 3 ? 'active' : ''}}" bindtap="switchTab" data-tab="3">已完成</text>
        <image wx:if="{{activeTab === 3}}" src="/imgs/item-bottom.png" class="tab-underline"></image>
      </view>
      <view class="tab-item">
        <text lines="1" class="text_6 {{activeTab === 4 ? 'active' : ''}}" bindtap="switchTab" data-tab="4">已取消</text>
        <image wx:if="{{activeTab === 4}}" src="/imgs/item-bottom.png" class="tab-underline"></image>
      </view>
    </view>
    <view class="image-wrapper_1">
      <image src="https://lanhu-oss-proxy.lanhuapp.com/SketchPng691d7939005bfbefde8c100224afa8d615d8a32c4bf7a012731f3ddb754eeaec" class="image_3"></image>
    </view>
  </view>
  
  <!-- 订单列表 -->
  <view style="padding-bottom: 80rpx;" wx:if="{{orders.length > 0}}">
    <view class="group_2" wx:for="{{orders}}" wx:key="id" bindtap="goToOrderDetail" data-order-id="{{item.id}}">
      <view class="section_1">
        <view style="display: flex;">
          <view class="text-wrapper_2">
            <text lines="1" class="text_7">堂食</text>
          </view>
          <text lines="1" class="text_8">清汀.新养生空间</text>
        </view>
        <text lines="1" class="text_9">{{item.statusText}}</text>
      </view>
      
      <!-- 商品列表 -->
      <view class="section_2" wx:for="{{item.products}}" wx:key="id" wx:for-item="product">
        <view class="image-text_1">
          <view class="image-wrapper_2">
            <image src="{{product.image}}" class="image_5"></image>
          </view>
          <view class="text-group_1">
            <text lines="1" class="text_10">{{product.name}}</text>
            <text lines="1" class="text_11">{{product.specs}}</text>
          </view>
        </view>
        <text lines="1" decode="true" class="text_12">x&nbsp;{{product.count}}</text>
      </view>
      
      <view class="section_4">
        <text lines="1" decode="true" class="text_16">{{item.createTime}}</text>
        <view class="text-wrapper_3">
          <text lines="1" decode="true" class="text_17">共{{item.totalCount}}件商品&nbsp;合计：</text>
          <text lines="1" class="text_18">¥{{item.totalPrice}}</text>
        </view>
      </view>
    </view>
    <image src="https://lanhu-oss-proxy.lanhuapp.com/SketchPng78f8f9efda663741e8c554d0bbb1c6c3dcee97e0a6860271affc0586bb19695b" class="image_10" wx:if="{{index < orders.length - 1}}"></image>
  </view>
  
  <!-- 空状态 -->
  <view wx:else class="empty-state">
    <view class="empty-icon">📦</view>
    <view class="empty-text">暂无订单</view>
  </view>
  
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-state">
    <view class="loading-text">加载中...</view>
  </view>
</view>