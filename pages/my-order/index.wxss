/* 页面容器 */
.page {
  background-color: rgba(249,248,250,1);
  position: relative;
  width: 750rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 标签页头部 */
.tab-header {
  display: flex;
  flex-direction: column;
  padding: 0rpx 6rpx 31rpx 0;
}

.tab-container {
  width: 587rpx;
  display: flex;
  justify-content: space-between;
  margin: 39rpx 76rpx 0 81rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.tab-underline {
  width: 56rpx;
  height: 8rpx;
  margin-top: 6rpx;
}

.tab-text {
  overflow-wrap: break-word;
  color: rgba(0,0,0,0.65);
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: normal;
  text-align: center;
  white-space: nowrap;
  line-height: 40rpx;
}

.tab-text.active {
  color: rgba(0,0,0,1);
  font-weight: 600;
}

.tab-divider {
  display: flex;
  flex-direction: row;
  margin: 6rpx 608rpx 0 80rpx;
}

.divider-line {
  width: 56rpx;
  height: 8rpx;
}

/* 订单列表 */
.order-list {
  padding-bottom: 80rpx;
}

.order-item {
  box-sizing: border-box;
  border-radius: 4rpx;
  align-self: center;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  width: 690rpx;
  background: #FFFFFF;
  margin: 20rpx auto;
  border-radius: 4rpx;
}

/* 订单头部信息 */
.order-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.order-type-info {
  display: flex;
  align-items: center;
}

.order-type-tag {
  background: linear-gradient(180deg, #477676 0%, #080E0E 100%), #D8D8D8;
  border-radius: 4rpx;
  padding: 8rpx 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-type-text {
  color: rgba(255,255,255,1);
  font-size: 20rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
}

.store-name {
  color: rgba(0,0,0,1);
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
  line-height: 40rpx;
  margin-left: 16rpx;
  margin-top: -4rpx;
}

.order-status {
  color: rgba(56,144,28,1);
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  white-space: nowrap;
  line-height: 33rpx;
}

/* 商品列表 */
.product-item {
  box-sizing: border-box;
  height: 181rpx;
  width: 640rpx;
  border-top: 1rpx solid rgba(0,0,0,0.3);
  padding: 30rpx 0 20rpx 0;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.product-info {
  width: 531rpx;
  height: 131rpx;
  display: flex;
  justify-content: space-between;
}

.product-image-wrapper {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 129rpx;
  height: 131rpx;
  background: #F9F8FA;
  border-radius: 4rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-details {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.product-name {
  color: rgba(0,0,0,0.85);
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  white-space: nowrap;
  line-height: 40rpx;
}

.product-specs {
  width: 386rpx;
  height: 56rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,0.45);
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: normal;
  text-align: left;
  line-height: 28rpx;
  margin-top: 11rpx;
}

.product-count {
  color: rgba(0,0,0,0.85);
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  text-align: right;
  white-space: nowrap;
  line-height: 37rpx;
  margin-top: 2rpx;
}

/* 订单底部信息 */
.order-footer {
  width: 631rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0 0 0;
}

.order-time {
  color: rgba(0,0,0,0.65);
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
}

.order-summary {
  height: 51rpx;
  overflow-wrap: break-word;
  font-size: 0rpx;
  font-family: PingFangSC-Regular;
  font-weight: normal;
  text-align: left;
  line-height: 33rpx;
}

.order-summary-text {
  height: 51rpx;
  color: rgba(0,0,0,0.65);
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: normal;
  text-align: left;
  line-height: 33rpx;
}

.order-total-price {
  height: 51rpx;
  color: rgba(0,0,0,0.65);
  font-size: 40rpx;
  font-family: DINPro-Bold;
  font-weight: 700;
  text-align: left;
  white-space: nowrap;
  line-height: 33rpx;
}

.order-separator {
  width: 750rpx;
  height: 68rpx;
  margin-top: 741rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  margin-top: 200rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Medium;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Medium;
}