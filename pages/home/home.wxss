/* 页面整体样式 */
.home-page {
  background-color: #FFFFFF;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
}

/* 顶部背景区域 */
.banner-section {
  width: 650rpx;
  height: 338rpx;
  margin: 226rpx auto 80rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner-image {
  width: 387rpx;
  height: 338rpx;
  object-fit: cover;
}

/* 登录区域 */
.login-card {
  width: 650rpx;
  background: #F9F8FA;
  border-radius: 4rpx;
  padding: 26rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.login-title-img {
  width: 137rpx;
  height: 41rpx;
  margin-bottom: 6rpx;
}

.login-desc {
  font-size: 20rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Medium;
  line-height: 28rpx;
}

.arrow-icon {
  width: 18rpx;
  height: 12rpx;
}

.test-card {
  width: 590rpx;
  height: 97rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-top: 19rpx;
}

.test-icon {
  width: 25rpx;
  height: 29rpx;
}

.test-text {
  font-size: 26rpx;
  color: rgba(0,0,0,0.65);
  font-family: PingFang-SC-Medium;
  line-height: 37rpx;
}

.refresh-icon {
  width: 25rpx;
  height: 25rpx;
}

/* 快捷操作区域 */
.action-section {
  width: 650rpx;
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}

.action-item {
  flex: 1;
  background: #F9F8FA;
  border-radius: 20rpx;
  padding: 80rpx 40rpx 97rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.action-icon {
  margin-bottom: 24rpx;
  width: 41rpx;
  height: 54rpx;
}

.action-subtitle {
  font-size: 20rpx;
  color: rgba(0,0,0,0.85);
  font-family: PingFang-SC-Medium;
  line-height: 28rpx;
  text-transform: uppercase;
  margin-bottom: 8rpx;
}

.action-title-img {
  width: 84rpx;
  height: 37rpx;
}

/* 推荐茶饮区域 */
.recommend-card {
  width: 650rpx;
  height: 386rpx;
  background: #F9F8FA;
  border-radius: 4rpx;
  padding: 27rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 26rpx;
  color: #000000;
  font-family: AaBanSongNon-CommercialUse;
  line-height: 37rpx;
  margin-bottom: 6rpx;
}

.section-desc {
  font-size: 20rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Medium;
  line-height: 28rpx;
}

.drink-scroll {
  height: 259rpx;
  width: 100%;
  margin-top: 32rpx;
}

.drink-container {
  display: flex;
  gap: 20rpx;
  padding-right: 20rpx;
}

.drink-card {
  background: #FFFFFF;
  border-radius: 4rpx;
  padding: 25rpx 20rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-width: 180rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.drink-img {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  align-self: center;
}

.drink-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}

.drink-name {
  width: 140rpx;
  height: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 20rpx;
  color: #000000;
  line-height: 28rpx;
  text-align: left;
  font-style: normal;
  margin-bottom: 8rpx;
}

.drink-price {
  font-size: 20rpx;
  color: #000000;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  line-height: 28rpx;
  text-align: left;
}

/* 当前门店区域 */
.store-card {
  width: 650rpx;
  height: 321rpx;
  background: #F9F8FA;
  border-radius: 4rpx;
  padding: 27rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.location-icon {
  width: 14rpx;
  height: 19rpx;
  margin-right: 15rpx;
}

.store-distance {
  font-size: 20rpx;
  color: rgba(0,0,0,0.45);
  font-family: PingFang-SC-Medium;
  line-height: 28rpx;
}

.store-img {
  width: 590rpx;
  height: 194rpx;
  border-radius: 4rpx;
  object-fit: cover;
  margin-top: 32rpx;
}

/* 轮播指示器样式 */
.wx-swiper-dots {
  position: relative;
  bottom: 20rpx;
}

.wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 50%;
  margin: 0 6rpx;
}

.wx-swiper-dot-active {
  background: #000000;
}