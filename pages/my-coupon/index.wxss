.page {
  background-color: #F9F8FA;
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999999;
}

/* 优惠券列表 */
.coupon-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 优惠券卡片 */
.coupon-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.coupon-item.available {
  border-left: 6rpx solid #2EAA5B;
}

.coupon-item.unavailable {
  border-left: 6rpx solid #CCCCCC;
  opacity: 0.6;
}

.coupon-item.available:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

/* 优惠券左侧 - 价值区域 */
.coupon-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  margin-right: 30rpx;
}

.coupon-value {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.value-symbol {
  font-size: 24rpx;
  color: #2EAA5B;
  font-weight: 500;
}

.value-number {
  font-size: 48rpx;
  color: #2EAA5B;
  font-weight: 600;
  line-height: 1;
}

.value-unit {
  font-size: 24rpx;
  color: #2EAA5B;
  font-weight: 500;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  line-height: 1.2;
}

/* 优惠券右侧 - 信息区域 */
.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coupon-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.coupon-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.coupon-time {
  font-size: 20rpx;
  color: #999999;
  line-height: 1.2;
}

.unavailable-reason {
  font-size: 22rpx;
  color: #FF6B6B;
  margin-top: 8rpx;
  padding: 4rpx 8rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 4rpx;
  align-self: flex-start;
}

/* 选择按钮 */
.coupon-select {
  width: 80rpx;
  height: 60rpx;
  background: linear-gradient(180deg, #477676 0%, #080E0E 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
  cursor: pointer;
  transition: all 0.3s ease;
}

.coupon-select:active {
  transform: scale(0.95);
}

.coupon-disabled {
  width: 80rpx;
  height: 60rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #CCCCCC;
  border: 2rpx solid #E0E0E0;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  padding: 0 30rpx;
  box-sizing: border-box;
}

.no-use-btn {
  flex: 1;
  height: 70rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  border: 2rpx solid #E0E0E0;
  cursor: pointer;
  transition: all 0.3s ease;
}

.no-use-btn:active {
  background: #E8E8E8;
  transform: scale(0.98);
}