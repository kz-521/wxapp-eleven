
<view class="container">
    <s-my-banner coupon-count="{{couponCount}}" balance="{{balance}}" bind:userInfoUpdated="onUserInfoUpdated"></s-my-banner>

    <view class="main-container">
        <!-- 订单状态面板 -->
        <view class="order-panel">
            <view class="order-item" bindtap="onGotoMyOrder" data-status="0">
                <view class="order-icon">📋</view>
                <view class="order-text">全部</view>
            </view>
            <view class="order-item" bindtap="onGotoMyOrder" data-status="1">
                <view class="order-icon">⏳</view>
                <view class="order-text">待取茶</view>
            </view>
            <view class="order-item" bindtap="onGotoMyOrder" data-status="2">
                <view class="order-icon">✅</view>
                <view class="order-text">已完成</view>
            </view>
            <view class="order-item" bindtap="onGotoMyOrder" data-status="3">
                <view class="order-icon">❌</view>
                <view class="order-text">已取消</view>
            </view>
        </view>

        <view class="list">
            <l-list bind:lintap="onGotoMyCoupon" icon="coupon" l-icon-class="sleeve-coupon" l-class-content="list-item" title="优惠券"></l-list>
            <l-list bind:lintap="onMgrAddress" icon="address2" l-icon-class="sleeve-address" l-class-content="list-item" title="收货地址"></l-list>
        </view>

    </view>
</view>

<l-dialog content-color="#333333"
          confirm-color="#157658"
          title-color="#157658"
          bind:linconfirm="onDialogConfirm"
          show="{{showDialog}}"
          content="请先授权您的收货地址"
          title="授权">

</l-dialog>
